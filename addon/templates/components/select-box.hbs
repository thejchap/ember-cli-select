<select disabled={{disabled}} class="{{selectClass}}" {{action 'change' on='change'}}>
  {{#if prompt}}
    <option selected={{not selection}}>
    {{prompt}}
    </option>
  {{/if}}
  {{#each content as |item|}}
    <option value={{get item optionValuePath}} selected={{if (eq (get item optionValuePath) selection) true false}}>
    {{get item optionLabelPath}}
    </option>
  {{/each}}
</select>
